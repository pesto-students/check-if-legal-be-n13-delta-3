datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Admin {
    id             Int      @id @default(autoincrement())
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
    username       String   @unique @db.VarChar(20)
    hashedPassword String
}

model GoogleOAuth {
    id           Int      @id @default(autoincrement())
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
    googleUserId String   @unique
    email        String?  @unique
    userId       Int      @unique
    user         User     @relation(fields: [userId], references: [id])
}

model User {
    id          Int            @id @default(autoincrement())
    createdAt   DateTime       @default(now())
    updatedAt   DateTime       @updatedAt
    name        String         @unique @db.VarChar(100)
    isSuspended Boolean        @default(false)
    isLawyer    Boolean        @default(false)
    googleOAuth GoogleOAuth?
    lawyer      Lawyer?
    reviews     Review[]
    ratings     ReviewRating[]
}

model Lawyer {
    id            Int          @id @default(autoincrement())
    createdAt     DateTime     @default(now())
    updatedAt     DateTime     @updatedAt
    name          String       @unique @db.VarChar(100)
    address       String
    description   String?
    phone         String       @db.VarChar(20)
    isVerified    Boolean      @default(false)
    isSuspended   Boolean      @default(false)
    isAvailable   Boolean      @default(true)
    averageRating Float        @default(0)
    ratingPoints  Int          @default(0)
    userId        Int          @unique
    cityId        Int
    city          City         @relation(fields: [cityId], references: [id])
    user          User         @relation(fields: [userId], references: [id])
    offerings     Offering[]
    reviews       Review[]
    banks         LawyerBank[]
}

model LawyerBank {
    id            Int      @id @default(autoincrement())
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
    lawyerId      Int
    lawyer        Lawyer   @relation(fields: [lawyerId], references: [id])
    bankName      String   @db.VarChar(100)
    bankIfsc      String   @db.VarChar(11)
    accountNumber String   @db.VarChar(30)
}

model State {
    id     Int    @id @default(autoincrement())
    name   String @unique @db.VarChar(100)
    cities City[]
}

model City {
    id      Int      @id @default(autoincrement())
    name    String   @unique @db.VarChar(100)
    stateId Int
    state   State    @relation(fields: [stateId], references: [id])
    lawyers Lawyer[]
    review  Review[]
}

model Language {
    id        Int        @id @default(autoincrement())
    name      String     @unique @db.VarChar(50)
    offerings Offering[]
    reviews   Review[]
}

model PaperType {
    id          Int        @id @default(autoincrement())
    name        String     @unique @db.VarChar(100)
    isSuspended Boolean    @default(false)
    offerings   Offering[]
    reviews     Review[]
}

model Offering {
    id                  Int       @id @default(autoincrement())
    createdAt           DateTime  @default(now())
    updatedAt           DateTime  @updatedAt
    lawyerId            Int
    lawyer              Lawyer    @relation(fields: [lawyerId], references: [id])
    paperTypeId         Int
    paperType           PaperType @relation(fields: [paperTypeId], references: [id])
    languageId          Int
    language            Language  @relation(fields: [languageId], references: [id])
    price               Float
    expectedTimeInHours Int
    isAvailable         Boolean   @default(true)
    description         String?
}

model Review {
    id                  Int              @id @default(autoincrement())
    createdAt           DateTime         @default(now())
    updatedAt           DateTime         @updatedAt
    userId              Int
    user                User             @relation(fields: [userId], references: [id])
    lawyerId            Int
    lawyer              Lawyer           @relation(fields: [lawyerId], references: [id])
    paperTypeId         Int
    paperType           PaperType        @relation(fields: [paperTypeId], references: [id])
    languageId          Int
    language            Language         @relation(fields: [languageId], references: [id])
    cityId              Int
    city                City             @relation(fields: [cityId], references: [id])
    userNote            String?
    price               Float
    expectedTimeInHours Int
    status              ReviewStatus     @default(INITIAL)
    feedbacks           ReviewFeedback[]
    rating              ReviewRating?
}

model ReviewRating {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    reviewId  Int      @unique
    review    Review   @relation(fields: [reviewId], references: [id])
    userId    Int
    user      User     @relation(fields: [userId], references: [id])
    rating    Int
    comment   String?
}

model ReviewFeedback {
    id          Int      @id @default(autoincrement())
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    reviewId    Int
    review      Review   @relation(fields: [reviewId], references: [id])
    description String
    byLawyer    Boolean
}

enum ReviewStatus {
    INITIAL
    WAITING_FOR_PAYMENT
    PENDING_FOR_REVIEW
    IN_REVIEW
    CLOSED
}
